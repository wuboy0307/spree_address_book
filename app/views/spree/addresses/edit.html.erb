<div class="container">
    <%= render :partial => 'spree/shared/error_messages', :locals => {:target => @address} %>
    <%= form_for @address, :html => {:id => "checkout_form_address"} do |f| %>
        <fieldset>
            <%= content_tag(:legend, I18n.t(:edit_shipping_address, :scope => :address_book)) %>
            <div class="inner">
                <%= render :partial => 'spree/addresses/form', :locals => {
                                                                     :address_name => 'address',
                                                                     :address_form => f,
                                                                     :address_type => 'address',
                                                                     :address => @address
                                                             } %>
            </div>
            <%= f.submit Spree.t(:update), :class => "btn btn-primary" %>
        </fieldset>
    <% end %>
</div>